{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake build [all]",
      "type": "shell",
      "command": "cmake",
      "args": [
          "--build",
          "${workspaceFolder}/build",
          "--target",
          "all",
          "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "dependsOn": [
        "cmake configure",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      }
    },
    {
      "label": "cmake build [template-repo-c]",
      "type": "shell",
      "command": "cmake",
      "args": [
          "--build",
          "${workspaceFolder}/build",
          "--target",
          "template-repo-c",
          "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "dependsOn": [
        "cmake configure",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      }
    },
    {
      "label": "cmake configure",
      "type": "shell",
      "command": "cmake -B${workspaceFolder}/build",
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
    },
  ]
}
